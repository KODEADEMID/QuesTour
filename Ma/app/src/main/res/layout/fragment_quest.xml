<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="turism.ru.Menu.ui.quest.QuestFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/im1">

        <Button
            android:id="@+id/btn_task1"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"
            android:background="#fff"
            android:text="Задача 1"
             />

        <Button
            android:id="@+id/btn_task2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="-10dp"
            android:background="#fff"
            android:text="Задача 2"
            app:rippleColor="#fff"
            app:strokeColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_task3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="20dp"
            android:background="#fff"
            android:text="Задача 3"/>

        <Button
            android:id="@+id/btn_task4"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="190dp"
            android:background="#fff"
            android:text="Задача 4"/>
        <Button
            android:id="@+id/btn_task5"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="200dp"
            android:background="#fff"
            android:text="Задача 5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="СТРЕЛКА"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="40dp"
            android:textSize="30sp"
            android:textColor="#fff"/>

    </LinearLayout>
</ScrollView>
