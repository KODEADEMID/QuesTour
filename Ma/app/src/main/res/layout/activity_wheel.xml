<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:context=".Wheel.WheelActivity">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="КОЛЕСО ОБОЗРЕНИЯ"
    android:textAlignment="center"
    android:textColor="@android:color/black"
    android:layout_marginTop="15dp"
    android:textSize="30sp" />
<ImageView
android:layout_marginTop="5dp"
    android:layout_height="250dp"
    android:layout_width="wrap_content"
    android:src="@drawable/wheel"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:text="Самое высокая достопримечательность 'Золотого кольца' - колесо обозрения высотой с 22-этажный дом! Внутри кабинок есть аудиогид, так что у путешественников есть возможность совершить обзорную экскурсию по Ярославлю."/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:text="ЗАДАНИЕ:"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"/>
        <TextView
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Посетите достопримечательность, сфотографируйтесь на фоне Колеса и выложите фото с Instagram или ВКонтакте с хештэгом: #ЯрославльКолесоОбозрения."
            />


        <TextView android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:text="НАГРАДА:"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textAlignment="center"/>
        <TextView
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="25 бонусов к паспорту туриста"
            />

    <Button

        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:id="@+id/road"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Как добраться"
        />
    <Button
        android:id="@+id/task"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выполнить Задание"
        />
        </LinearLayout>

</ScrollView>