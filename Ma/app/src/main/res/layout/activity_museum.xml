<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:context=".museum.museum">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ярославский художественный музей"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:textSize="30sp" />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_height="250dp"
            android:layout_width="wrap_content"
            android:src="@drawable/museum"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:text="Ярославский художественный музей – крупнейший музей искусств в Российской провинции, единственный специализированный художественный музей области, победитель первого конкурса «Окно в Россию». В его собрании более 70 000 произведений живописи, графики, декоративно-прикладного искусства, скульптуры, нумизматики."/>

        <TextView android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:text="ЗАДАНИЕ:"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textAlignment="center"/>
        <TextView
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Посетите музей и просканируйте любой QR код картины Реина"
            />

        <TextView android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:text="НАГРАДА:"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textAlignment="center"/>
        <TextView
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="25 бонусов к паспорту туриста"
            />
        <Button

            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:id="@+id/road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Как добраться"
            />
        <Button
            android:id="@+id/task_qr"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сканировать QR"
            />
    </LinearLayout>

</ScrollView>